<div class="row">
    {{#each products}}
        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="box">
                <a href="">
                    <div class="img-box">
                        <img src="img/pid/{{ProID}}/main_thumbs.jpg" alt="">
                    </div>
                    <div class="detail-box">
                        <h6>
                            {{ProName}}
                        </h6>
                        <h6>
                            Price
                            <span>
                                {{Price}}
                            </span>
                        </h6>
                    </div>
                    <div class="new">
                        <span>
                            New
                        </span>
                    </div>
                </a>
            </div>
        </div>
    {{/each}}
</div>